{
    "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "nodenext", // Ensures compatibility with ES Modules
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  